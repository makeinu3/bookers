<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Book' %>
<% end %>

<p>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <a href='/books'>Back</a>
</p>